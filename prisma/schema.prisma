generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  image     String?
  products  Product[]
  createdAt DateTime @default(now())
}

model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  price       Int
  oldPrice    Int?
  description String
  image       String
  stock       Int
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
}

model Post {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  content   String
  image     String?
  createdAt DateTime @default(now())
}